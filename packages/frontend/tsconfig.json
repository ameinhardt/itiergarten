{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "vite/client", "vite-plugin-pwa/client", "web-bluetooth"
    ],
    "useDefineForClassFields": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "../../node_modules/vite-plugin-pwa/client.d.ts"
  ],
  "plugins": [
    {
      "name": "@vuedx/typescript-plugin-vue"
    }
  ]
}
